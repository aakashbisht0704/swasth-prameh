[Unit]
Description=GitHub Webhook Server for SwasthPrameh
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/swasth-prameh
Environment="NODE_ENV=production"
Environment="WEBHOOK_PORT=9000"
Environment="WEBHOOK_SECRET=your-secret-key-change-this"
ExecStart=/usr/bin/node /root/swasth-prameh/webhook-server.js
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target


